<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaishengit.crm.mapper.RecordsMapper">


    <insert id="save">
        insert into records(sale_id,text,time)
        VALUES(#{saleId},#{text},#{time})

    </insert>
    <delete id="delBySale">
        delete from records where sale_id=#{id}

    </delete>
    <select id="findBySaleId" resultType="com.kaishengit.crm.entity.Records">
        select * from records where sale_id=#{id}
    </select>
</mapper>